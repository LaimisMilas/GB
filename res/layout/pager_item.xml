<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@color/white"
    android:gravity="left"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/m_image"
        style="@style/myStyle"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_margin="0dp"
        android:adjustViewBounds="false"
        android:background="@color/white"
        android:cropToPadding="false"
        android:src="@drawable/port_4_3" />

    <TextView
        android:id="@+id/m_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@id/ai_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        layout="@layout/buttons" />

    <ScrollView
        android:id="@+id/m_liner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ai_buttons"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/m_image"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/m_desc"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
